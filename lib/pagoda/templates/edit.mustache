
<body class="admin posts edit">
  <div id="admin">
    <div id="save"></div>
    
    <form accept-charset="UTF-8" action="/save-post" class="edit_post" method="post">

      <div style="margin:0;padding:0;display:inline">

      </div>

      <div id="split">
        <div id="post-editor" class="split-section">

          <div id="text-title">
            <textarea cols="40" id="post_title" name="post[title]" placeholder="Title here" rows="1">{{ title }}</textarea>
            <input type="hidden" name="post[name]" value="{{ name }}">
          </div>

          <div id="text-content">
            <textarea cols="40" id="post_content" name="post[content]" placeholder="Write post here" rows="20">{{content}}</textarea>
          </div>
        </div>
      </div>

      <div id="publish-bar-hover">
        <div id="publish-bar">
          <div class="contain">
            <div class="left">
              <a href="/">&laquo; Admin</a>
              <a href="/delete/{{ name }}" class="delete-bar" data-confirm="Are you sure?" data-method="delete" rel="nofollow">Delete</a>
              <a href="#options" class="menu">Options</a>
              <ul id="options" class="sub-menu">
                <li>
                  <label for="post_url">Slug</label>
                  <input id="post_slug" name="post[slug]" placeholder="Leave blank to automatically generate" size="30" type="text" value="cream" />
                </li>
                <li>
                  <label for="post_url">URL</label>
                  <input id="post_url" name="post[url]" placeholder="Optional external link" size="30" type="text" value="" />
                </li>
              </ul>
            </div>
            <div class="right">
              <label for="post_draft">Draft</label>
              <input name="post[draft]" type="hidden" value="0" /><input id="post_draft" name="post[draft]" type="checkbox" value="1" />
              <input id="save-button" name="commit" type="submit" value="Save" />
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>

</body>