<div id="split">
  <div id="post-editor" class="split-section">
    <div id="text-title">
      <textarea cols="40" id="post_title" name="post[title]" placeholder="Title here" rows="1">{{#post_title}}{{ post_title }}{{/post_title}}{{^post_title}}{{ title }}{{/post_title}}</textarea>
      <input type="hidden" name="post[name]" value="{{ name }}">
    </div>

    <div id="text-content">
      <textarea cols="40" id="post_content" name="post[content]" placeholder="Write post here" rows="20">{{content}}</textarea>
    </div>
  </div>
</div>
